	<bean id="commonSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="commonDataSource" />
		<property name="typeAliasesPackage" value="com.wac.query.models" />
	</bean>
	
	<!-- 配置事务支持 -->
	<bean id="commonManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="commonDataSource"></property>
	</bean>
	<tx:annotation-driven transaction-manager="commonManager"/>

	<bean name="commonMapperScannerConfigurer" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="com.wac.query.dao,com.wac.business.datastatistics.persistence,com.wac.business.setting.persistence,com.wac.common.persistence,com.wac.user.persistence" />
		<property name="sqlSessionFactory" ref="commonSqlSessionFactory" />
	</bean>

